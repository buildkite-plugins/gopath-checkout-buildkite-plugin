#!/bin/bash

set -eu

if [[ ! -z "${BUILDKITE_PLUGIN_GOLANG_IMPORT:-}" ]]; then
  echo "~~~ Setting GOPATH and checkout path"
  export GOPATH="$BUILDKITE_BUILD_CHECKOUT_PATH"
  export BUILDKITE_BUILD_CHECKOUT_PATH="$BUILDKITE_BUILD_CHECKOUT_PATH/src/$BUILDKITE_PLUGIN_GOLANG_IMPORT"
else
  echo "+++ :golang: No 'import' option specified"
  exit 1
fi
